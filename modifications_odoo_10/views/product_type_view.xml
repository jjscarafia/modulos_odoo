<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='product_type_model_view_form' model='ir.ui.view'>
        <field name="name">product.type.form</field>
        <field name="model">product.type</field>
        <field name="arch" type="xml">
            <form string="Product type">
                <sheet>
                    <notebook>
                        <page string="Product type">
                            <group>
                                <field name="code" />
                                <field name="name" />
                            </group>
                        </page>>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id='product_type_model_view_tree' model='ir.ui.view'>
        <field name="name">product.type.tree</field>
        <field name="model">product.type</field>
        <field name="arch" type="xml">
            <tree string="Product type">
                <field name="code" />
                <field name="name" />
            </tree>
        </field>
    </record>
    
    <record model="ir.ui.view" id="view_product_type_search">
		<field name="name">product.type.search</field>
		<field name="model">product.type</field>
		<field name="arch" type="xml">
			<search string="Product type">
                <field name="code"/>
                <field name="name"/>
			</search>
		</field>
	</record>

    <record id='product_type_action' model='ir.actions.act_window'>
        <field name="name">Product type</field>
        <field name="res_model">product.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to create a new product type.
          </p>
        </field>
    </record>
            
    <menuitem
        id="menu_product_type"
        name="Product type"
        groups="hr.group_hr_manager,hr.group_hr_user,base.group_user"
        parent="menu_config_employees_general"
        action="product_type_action"
        sequence="75"/>
</odoo>
