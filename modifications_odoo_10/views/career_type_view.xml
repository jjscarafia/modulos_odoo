<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='career_type_model_view_form' model='ir.ui.view'>
        <field name="name">career.type.form</field>
        <field name="model">career.type</field>
        <field name="arch" type="xml">
            <form string="Career type">
                <sheet>
                    <notebook>
                        <page string="Career type">
                            <group>
                                <field name="code" />
                                <field name="name" />
                                <field name="description" />
                            </group>
                        </page>>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id='career_type_model_view_tree' model='ir.ui.view'>
        <field name="name">career.type.tree</field>
        <field name="model">career.type</field>
        <field name="arch" type="xml">
            <tree string="Career type">
                <field name="code" />
                <field name="name" />
                <field name="description" />
            </tree>
        </field>
    </record>
    
    <record model="ir.ui.view" id="view_career_type_search">
		<field name="name">career.type.search</field>
		<field name="model">career.type</field>
		<field name="arch" type="xml">
			<search string="Career type">
                <field name="code"/>
                <field name="name"/>
			</search>
		</field>
	</record>

    <record id='career_type_action' model='ir.actions.act_window'>
        <field name="name">Career type</field>
        <field name="res_model">career.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to create a new career type.
          </p>
        </field>
    </record>
            
    <menuitem
        id="menu_career_type"
        name="Career type"
        groups="hr.group_hr_manager,hr.group_hr_user,base.group_user"
        parent="menu_config_employees_general"
        action="career_type_action"
        sequence="75"/>
</odoo>
