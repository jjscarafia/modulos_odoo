<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='hr_airport_model_view_form' model='ir.ui.view'>
        <field name="name">hr.airport.form</field>
        <field name="model">hr.airport</field>
        <field name="arch" type="xml">
            <form string="Airport">
                <sheet>
                    <notebook>
                        <page string="Airport">
                            <group>
                                <field name="name" />
                                <field name="airport_code" />
                                <field name="airport_location" />
                                <field name="employee_ids" widget="many2many_tags"/>
                            </group>
                        </page>>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id='hr_airport_model_view_tree' model='ir.ui.view'>
        <field name="name">hr.airport.tree</field>
        <field name="model">hr.airport</field>
        <field name="arch" type="xml">
            <tree string="Airport">
                <field name="name" />
                <field name="airport_code" />
                <field name="airport_location" />
                <field name="employee_ids" />
            </tree>
        </field>
    </record>

    <record id='hr_airport_action' model='ir.actions.act_window'>
        <field name="name">Airport</field>
        <field name="res_model">hr.airport</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to create a new airport.
          </p>
        </field>
    </record>
            
    <menuitem
        id="menu_hr_airport"
        name="Airport"
        groups="hr.group_hr_manager,hr.group_hr_user,base.group_user"
        parent="menu_config_employees_general"
        action="hr_airport_action"
        sequence="75"/>
</odoo>
